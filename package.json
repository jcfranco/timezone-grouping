{
  "name": "tz-auto-grouping",
  "version": "0.0.1",
  "description": "Iterates over a list of given timezones and auto-groups them based on real dates (respecting DST).",
  "main": "dist/timezone-grouping.umd.min.js",
  "module": "dist/timezone-grouping.esm.min.js",
  "cli": {
    "bin": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "lint": "xo --fix --prettier --space",
    "prepare": "husky install",
    "release": "release-it"
  },
  "author": "Sebastian Germesin (sebastian.germesin@gmail.com)",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/luxon": "^3.3.1",
    "@types/node": "^20.4.2",
    "@types/yargs": "^17.0.24",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dayjs": "^1.11.9",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "luxon": "^3.3.0",
    "markdownlint-cli": "^0.35.0",
    "moment-timezone": "^0.5.43",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.26.3",
    "rollup-plugin-executable": "^1.6.3",
    "rollup-plugin-hashbang": "^3.0.0",
    "typescript": "^5.1.6",
    "xo": "^0.55.0",
    "yargs": "^17.7.2"
  }
}
